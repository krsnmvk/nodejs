<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item">
        <a class="<%= href === '/' ? 'active' : '' %>" href="/">Shop</a>
      </li>
      <!-- <li class="main-header__item">
        <a class="<%= href === '/products' ? 'active' : '' %>" href="/products">Products</a>
      </li> -->
      <% if (isAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= href === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
      </li>
      <li class="main-header__item">
        <a class="<%= href === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
      </li>
      <li class="main-header__item">
        <a class="<%= href === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product
